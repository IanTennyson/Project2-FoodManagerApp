<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed_food_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF8C00"
    tools:context="example.codeclan.com.myfoodtracker.Activities.DetailedFoodTrackerActivity">

    <TextView
        android:id="@+id/gap"

        android:text="BREAKFAST"
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:layout_width="700dp"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/breakfast"

        android:src="@drawable/breakfast_copy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/gap"
        />

    <ListView
        android:id="@+id/breakfast_list"

        android:layout_toRightOf="@id/breakfast"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/gap">

    </ListView>

    <TextView
        android:id="@+id/gap_one"

        android:text="LUNCH"
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:layout_width="700dp"
        android:layout_height="20dp"
        android:layout_below="@id/breakfast"
        />

    <ImageView
        android:id="@+id/lunch"

        android:src="@drawable/lunch_copy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/gap_one"
        />

    <ListView
        android:id="@+id/lunch_list"

        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/lunch"
        android:layout_below="@id/gap_one"
        >

    </ListView>

    <TextView
        android:id="@+id/gap_two"

        android:text="DINNER"
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:layout_width="700dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lunch"
        />

    <ImageView
        android:id="@+id/dinner"

        android:src="@drawable/dinner_copy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/gap_two"
        />

    <ListView
        android:id="@+id/dinner_list"

        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/dinner"
        android:layout_below="@id/gap_two"
        >
    </ListView>

    <TextView
        android:id="@+id/gap_three"

        android:text="SNACK"
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:layout_width="700dp"
        android:layout_height="20dp"
        android:layout_below="@id/dinner"
        />

    <ImageView
        android:id="@+id/snack"

        android:src="@drawable/snack_copy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/gap_three"
        />

    <ListView
        android:id="@+id/snack_list"

        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/snack"
        android:layout_below="@+id/gap_three"
        >

    </ListView>


</RelativeLayout>
