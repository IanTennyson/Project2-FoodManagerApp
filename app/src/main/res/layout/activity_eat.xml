<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF8C00"
    tools:context="example.codeclan.com.myfoodtracker.EatActivity">

    <Button
        android:id="@+id/submit_new_food"

        android:onClick="onEatButtonClicked"
        android:text="EAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        />


    <EditText
        android:id="@+id/calories_entered"

        android:inputType="number"
        android:gravity="center"
        android:hint="HOW MANY CALORIES WAS IT?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/food"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/chosen_date"

        android:inputType="textCapCharacters"
        android:hint="23 APR 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/date_button"
        android:layout_alignStart="@+id/date_button"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/food"

        android:gravity="center"
        android:inputType="textCapCharacters"
        android:hint="WHAT DID YOU EAT?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />



    <Button
        android:id="@+id/date_button"

        android:onClick="setDate"

        android:text="Set Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="41dp"
        android:layout_below="@+id/chosen_date"
        android:layout_alignLeft="@+id/submit_new_food"
        android:layout_alignStart="@+id/submit_new_food" />

    <Spinner
        android:id="@+id/meal"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/date_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

    </Spinner>


</RelativeLayout>
