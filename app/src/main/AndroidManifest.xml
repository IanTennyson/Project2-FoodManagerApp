<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.codeclan.com.myfoodtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NavigationActivity" />
        <activity android:name=".FoodTrackerActivity" />
        <activity android:name=".EatActivity" />
        <activity android:name=".DetailedFoodTrackerActivity" />
        <activity android:name=".DetailedMealTrackerActivity"></activity>
    </application>

</manifest>